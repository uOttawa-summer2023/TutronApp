<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TutorProfile"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@color/design_default_color_background" />

    <TextView
        android:id="@+id/selfIntroductionTextView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Tutor's self-introduction" />

    <ListView
        android:id="@+id/topicsTaughtListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/reviewsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnAddLesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Lesson" />

    <Button
        android:id="@+id/btnRemoveLesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Lesson" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
