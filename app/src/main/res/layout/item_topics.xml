<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTopicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvYearsOfExperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end">

        <Button
            android:id="@+id/btnAddToProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Profile" />

        <Button
            android:id="@+id/btnAddToOfferedTopics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Offered" />

        <Button
            android:id="@+id/btnRemoveFromProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove from Profile" />

        <Button
            android:id="@+id/btnRemoveFromOfferedTopics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove from Offered" />

    </LinearLayout>

</LinearLayout>


